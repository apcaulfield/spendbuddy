@page "/journal"
@inject AccountService AccountService

<PageTitle>Journal</PageTitle>

<h1>Journal</h1>

<p>View, log, and modify expenses.</p>

@if (AccountService?.ExpenseService?.Expenses == null)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Amount</th>
                <th>Name</th>
                <th>Category</th>
                <th>Description</th>
                <th>Notes</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var expense in AccountService.ExpenseService.Expenses)
            {
                <tr>
                    <td>@expense.Expense_id</td>
                    <td>@expense.Amount</td>
                    <td>@expense.Name</td>
                    <td>@expense.Category</td>
                    <td>@expense.Description</td>
                    <td>@expense.Notes</td>

                </tr>
            }
        </tbody>
    </table>
}

@code {
    protected override async Task OnInitializedAsync()
    {
        await AccountService.ExpenseService.FetchAllExpensesAsync();
    }
}
